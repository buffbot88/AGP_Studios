<Window x:Class="AGP_Studios.IDE.UI.Windows.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="AGP Studios IDE - Login"
        Height="450"
        Width="500"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="{StaticResource BackgroundBrush}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Border Grid.Row="0" Background="{StaticResource PrimaryBrush}" Padding="20">
            <StackPanel>
                <TextBlock Text="AGP Studios IDE" 
                          FontSize="28" 
                          FontWeight="Bold" 
                          Foreground="White"
                          HorizontalAlignment="Center"/>
                <TextBlock Text="AI-Powered Game Development Platform" 
                          FontSize="14" 
                          Foreground="White"
                          Opacity="0.9"
                          HorizontalAlignment="Center"
                          Margin="0,5,0,0"/>
            </StackPanel>
        </Border>
        
        <!-- Login Form -->
        <Border Grid.Row="1" 
                Background="{StaticResource SurfaceBrush}" 
                Margin="40,40,40,40"
                Padding="30"
                CornerRadius="8">
            <Border.Effect>
                <DropShadowEffect BlurRadius="10" 
                                 ShadowDepth="2" 
                                 Opacity="0.2"/>
            </Border.Effect>
            
            <StackPanel>
                <TextBlock Text="Sign In" 
                          FontSize="20" 
                          FontWeight="SemiBold"
                          Foreground="{StaticResource TextBrush}"
                          Margin="0,0,0,20"/>
                
                <!-- Server Configuration -->
                <TextBlock Text="Server URL" 
                          FontSize="12" 
                          Margin="0,0,0,5"
                          Foreground="{StaticResource TextBrush}"/>
                <TextBox x:Name="ServerUrlTextBox" 
                        Height="35"
                        FontSize="14"
                        Margin="0,0,0,15"/>
                
                <!-- Username -->
                <TextBlock Text="Username" 
                          FontSize="12" 
                          Margin="0,0,0,5"
                          Foreground="{StaticResource TextBrush}"/>
                <TextBox x:Name="UsernameTextBox" 
                        Height="35"
                        FontSize="14"
                        Margin="0,0,0,15"/>
                
                <!-- Password -->
                <TextBlock Text="Password" 
                          FontSize="12" 
                          Margin="0,0,0,5"
                          Foreground="{StaticResource TextBrush}"/>
                <PasswordBox x:Name="PasswordBox" 
                            Height="35"
                            FontSize="14"
                            Margin="0,0,0,20"/>
                
                <!-- Status Message -->
                <TextBlock x:Name="StatusTextBlock" 
                          FontSize="12"
                          Foreground="Red"
                          TextWrapping="Wrap"
                          Margin="0,0,0,10"
                          Visibility="Collapsed"/>
                
                <!-- Login Button -->
                <Button x:Name="LoginButton" 
                       Content="Sign In" 
                       Height="40"
                       FontSize="14"
                       FontWeight="SemiBold"
                       Click="LoginButton_Click"
                       IsDefault="True"/>
                
                <TextBlock Text="Connecting to AGP AI Server for authentication" 
                          FontSize="10" 
                          Foreground="Gray"
                          HorizontalAlignment="Center"
                          Margin="0,15,0,0"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
