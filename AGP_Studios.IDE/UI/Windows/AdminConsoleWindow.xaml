<Window x:Class="AGP_Studios.IDE.UI.Windows.AdminConsoleWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:avalonedit="http://icsharpcode.net/sharpdevelop/avalonedit"
        Title="AGP Studios IDE - Admin Console"
        Height="700"
        Width="1200"
        WindowStartupLocation="CenterScreen"
        Background="{StaticResource BackgroundBrush}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Toolbar -->
        <Border Grid.Row="0" Background="{StaticResource SurfaceBrush}" Padding="10" BorderBrush="#E0E0E0" BorderThickness="0,0,0,1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <Button x:Name="NewDraftButton" Content="New Draft" Width="100" Height="32" Margin="5,0" Click="NewDraftButton_Click"/>
                    <Button x:Name="SaveDraftButton" Content="Save Draft" Width="100" Height="32" Margin="5,0" Click="SaveDraftButton_Click"/>
                    <Button x:Name="LoadDraftButton" Content="Load Draft" Width="100" Height="32" Margin="5,0" Click="LoadDraftButton_Click"/>
                    <Button x:Name="PublishButton" Content="Publish to Server" Width="130" Height="32" Margin="5,0" Background="{StaticResource AccentBrush}" Click="PublishButton_Click"/>
                    <Separator Width="1" Margin="10,0" Background="#E0E0E0"/>
                    <Button x:Name="GenerateCodeButton" Content="AI Generate (Placeholder)" Width="180" Height="32" Margin="5,0" Click="GenerateCodeButton_Click" IsEnabled="False" Opacity="0.6"/>
                </StackPanel>
                
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <TextBlock x:Name="UserInfoTextBlock" VerticalAlignment="Center" Margin="10,0" FontWeight="SemiBold"/>
                    <Button Content="Logout" Width="80" Height="32" Margin="5,0" Click="LogoutButton_Click"/>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- Main Content -->
        <Grid Grid.Row="1" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <!-- Drafts List -->
            <Border Grid.Column="0" Background="{StaticResource SurfaceBrush}" CornerRadius="4" Padding="10">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <TextBlock Grid.Row="0" Text="Local Drafts" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>
                    
                    <ListBox Grid.Row="1" x:Name="DraftsListBox" 
                            SelectionChanged="DraftsListBox_SelectionChanged"
                            Background="Transparent"
                            BorderThickness="0">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Margin="5">
                                    <TextBlock Text="{Binding Name}" FontWeight="SemiBold" FontSize="14"/>
                                    <TextBlock Text="{Binding LastModified, StringFormat='Modified: {0:g}'}" 
                                              FontSize="10" 
                                              Foreground="Gray"/>
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Grid>
            </Border>
            
            <GridSplitter Grid.Column="1" Width="5" HorizontalAlignment="Stretch" Background="#E0E0E0"/>
            
            <!-- Code Editor -->
            <Border Grid.Column="2" Background="{StaticResource SurfaceBrush}" CornerRadius="4" Padding="10">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Editor Header -->
                    <Grid Grid.Row="0" Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <TextBlock Grid.Column="0" Text="Draft Name:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                        <TextBox Grid.Column="1" x:Name="DraftNameTextBox" Height="30" VerticalContentAlignment="Center"/>
                    </Grid>
                    
                    <!-- Code Editor -->
                    <avalonedit:TextEditor Grid.Row="1" 
                                          x:Name="CodeEditor"
                                          FontFamily="Consolas"
                                          FontSize="14"
                                          ShowLineNumbers="True"
                                          Background="White"
                                          BorderBrush="#E0E0E0"
                                          BorderThickness="1"/>
                    
                    <!-- Status Bar -->
                    <Border Grid.Row="2" Background="#F5F5F5" Padding="10,5" Margin="0,10,0,0" CornerRadius="4">
                        <TextBlock x:Name="StatusBarTextBlock" Text="Ready" FontSize="12"/>
                    </Border>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>
