<Window x:Class="AGP_Studios.IDE.UI.Windows.GameLibraryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="AGP Studios IDE - Game Library"
        Height="700"
        Width="1200"
        WindowStartupLocation="CenterScreen"
        Background="{StaticResource BackgroundBrush}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Border Grid.Row="0" Background="{StaticResource SurfaceBrush}" Padding="15" BorderBrush="#E0E0E0" BorderThickness="0,0,0,1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <TextBlock Text="AGP Studios Game Library" 
                              FontSize="20" 
                              FontWeight="Bold"
                              VerticalAlignment="Center"
                              Margin="0,0,20,0"/>
                    <Button x:Name="RefreshButton" 
                           Content="ðŸ”„ Refresh" 
                           Width="100" 
                           Height="32" 
                           Margin="5,0"
                           Click="RefreshButton_Click"/>
                </StackPanel>
                
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <TextBlock x:Name="UserInfoTextBlock" 
                              VerticalAlignment="Center" 
                              Margin="10,0" 
                              FontWeight="SemiBold"/>
                    <Button Content="Logout" 
                           Width="80" 
                           Height="32" 
                           Margin="5,0"
                           Click="LogoutButton_Click"/>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- Main Content -->
        <TabControl Grid.Row="1" Margin="10" Background="Transparent" BorderThickness="0">
            <!-- Available Games Tab -->
            <TabItem Header="Available Games">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Games List -->
                    <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto">
                        <ItemsControl x:Name="GamesItemsControl">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel Orientation="Horizontal"/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="{StaticResource SurfaceBrush}" 
                                           Width="280" 
                                           Height="320"
                                           Margin="10"
                                           CornerRadius="8"
                                           Padding="15">
                                        <Border.Effect>
                                            <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.2"/>
                                        </Border.Effect>
                                        
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="150"/>
                                                <RowDefinition Height="*"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>
                                            
                                            <!-- Thumbnail -->
                                            <Border Grid.Row="0" 
                                                   Background="#E0E0E0" 
                                                   CornerRadius="4"
                                                   Margin="0,0,0,10">
                                                <TextBlock Text="ðŸŽ®" 
                                                          FontSize="48" 
                                                          HorizontalAlignment="Center"
                                                          VerticalAlignment="Center"/>
                                            </Border>
                                            
                                            <!-- Game Info -->
                                            <StackPanel Grid.Row="1">
                                                <TextBlock Text="{Binding Name}" 
                                                          FontSize="16" 
                                                          FontWeight="Bold"
                                                          TextWrapping="Wrap"
                                                          Margin="0,0,0,5"/>
                                                <TextBlock Text="{Binding Description}" 
                                                          FontSize="12" 
                                                          TextWrapping="Wrap"
                                                          Foreground="Gray"
                                                          Margin="0,0,0,5"
                                                          MaxHeight="60"/>
                                                <TextBlock FontSize="11" Foreground="Gray">
                                                    <Run Text="Version: "/><Run Text="{Binding Version}"/>
                                                </TextBlock>
                                                <TextBlock FontSize="11" Foreground="Gray">
                                                    <Run Text="By "/><Run Text="{Binding Author}"/>
                                                </TextBlock>
                                            </StackPanel>
                                            
                                            <!-- Action Button -->
                                            <Button Grid.Row="2" 
                                                   Content="Download &amp; Install"
                                                   Height="35"
                                                   Margin="0,10,0,0"
                                                   Tag="{Binding}"
                                                   Click="DownloadGameButton_Click"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                    
                    <!-- Loading/Status -->
                    <Border Grid.Row="1" 
                           Background="#F5F5F5" 
                           Padding="10" 
                           Margin="10,10,10,0">
                        <TextBlock x:Name="StatusTextBlock" Text="Ready" FontSize="12"/>
                    </Border>
                </Grid>
            </TabItem>
            
            <!-- Installed Games Tab -->
            <TabItem Header="Installed Games">
                <Grid>
                    <ListBox x:Name="InstalledGamesListBox" 
                            Background="Transparent"
                            BorderThickness="0"
                            Margin="10">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border Background="{StaticResource SurfaceBrush}" 
                                       Padding="15" 
                                       Margin="5"
                                       CornerRadius="4">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        
                                        <StackPanel Grid.Column="0">
                                            <TextBlock Text="{Binding Name}" 
                                                      FontSize="16" 
                                                      FontWeight="Bold"/>
                                            <TextBlock FontSize="12" Foreground="Gray">
                                                <Run Text="Version: "/><Run Text="{Binding Version}"/>
                                            </TextBlock>
                                            <TextBlock Text="{Binding InstallPath}" 
                                                      FontSize="11" 
                                                      Foreground="Gray"
                                                      Margin="0,5,0,0"/>
                                        </StackPanel>
                                        
                                        <Button Grid.Column="1" 
                                               Content="â–¶ Play"
                                               Width="100"
                                               Height="35"
                                               Background="{StaticResource AccentBrush}"
                                               Tag="{Binding}"
                                               Click="PlayGameButton_Click"/>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
